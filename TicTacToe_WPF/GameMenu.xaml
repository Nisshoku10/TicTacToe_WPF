        <Button x:Name ="ExitGame" Content="Exit Game" Click ="ExitGame_Click" HorizontalAlignment="Center" Margin="0,603,0,0" VerticalAlignment="Top" Height="66" Width="424" FontFamily="Consolas" FontSize="36"/>
        <Label x:Name ="Title" Content="TicTacToe" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" FontFamily="Consolas" FontSize="72" Background="#FFFFC4C4" BorderBrush="Black"/>
    </Grid>
</Window>
